{
  "manifest_version": 3,
  "name": "BLACKOUT Greyout Mode",
  "version": "1.0.0",
  "description": "Keep RB2B identification working while stripping monetizable data. Your GTM team gets leads. The vendor gets noise.",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "*://*.execute-api.*.amazonaws.com/*",
    "*://api.rb2b.com/*",
    "*://*.rb2b.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["greyout-injector.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["greyout-core.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
